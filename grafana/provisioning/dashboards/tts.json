{
  "title": "TTS Dashboard",
  "uid": "tts-pro",
  "schemaVersion": 39,
  "version": 2,
  "editable": true,
  "refresh": "30s",
  "time": { "from": "now-24h", "to": "now" },
  "timezone": "",
  "templating": {
    "list": [
      {
        "name": "gpu",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "refresh": 1,
        "query": "label_values(DCGM_FI_DEV_GPU_UTIL, gpu)",
        "includeAll": false,
        "multi": false,
        "current": { "selected": true, "text": "0", "value": "0" }
      }
    ]
  },
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.4.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "2.9.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "bargauge", "name": "Bar gauge", "version": "" },
    { "type": "panel", "id": "gauge", "name": "Gauge", "version": "" },
    { "type": "panel", "id": "row", "name": "Row", "version": "" }
  ],
  "panels": [
    { "type": "row", "title": "Vue d'ensemble", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 } },

    {
      "type": "stat",
      "title": "TTS UP",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [ { "refId": "A", "expr": "max(up{job=\"tts\"})" } ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ]
        }
      }
    },
    {
      "type": "stat",
      "title": "Channels ouverts",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [ { "refId": "A", "expr": "max(py_open_channels) OR on() vector(0)" } ],
      "fieldConfig": { "defaults": { "decimals": 0 } }
    },
    {
      "type": "stat",
      "title": "Connexions/s",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [ { "refId": "A", "expr": "sum(rate(py_connect[$__rate_interval])) OR on() vector(0)" } ],
      "fieldConfig": { "defaults": { "unit": "ops", "decimals": 2 } }
    },
    {
      "type": "stat",
      "title": "Steps actifs/s",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [ { "refId": "A", "expr": "sum(rate(py_active_steps[$__rate_interval])) OR on() vector(0)" } ],
      "fieldConfig": { "defaults": { "unit": "ops", "decimals": 2 } }
    },
    {
      "type": "stat",
      "title": "Step duration p95 (s)",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(py_model_step_duration_bucket[$__rate_interval]))) OR on() vector(0)"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "decimals": 3 } }
    },

    { "type": "row", "title": "Performance", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 } },

    {
      "type": "timeseries",
      "title": "Step duration p50 / p95 / p99 (s)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "refId": "A", "legendFormat": "p50", "expr": "histogram_quantile(0.50, sum by (le) (rate(py_model_step_duration_bucket[$__rate_interval]))) OR on() vector(0)" },
        { "refId": "B", "legendFormat": "p95", "expr": "histogram_quantile(0.95, sum by (le) (rate(py_model_step_duration_bucket[$__rate_interval]))) OR on() vector(0)" },
        { "refId": "C", "legendFormat": "p99", "expr": "histogram_quantile(0.99, sum by (le) (rate(py_model_step_duration_bucket[$__rate_interval]))) OR on() vector(0)" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "type": "timeseries",
      "title": "Steps/s & Connexions/s",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "refId": "A", "legendFormat": "steps/s", "expr": "sum(rate(py_total_steps[$__rate_interval])) OR on() vector(0)" },
        { "refId": "B", "legendFormat": "connexions/s", "expr": "sum(rate(py_connect[$__rate_interval])) OR on() vector(0)" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops", "min": 0 } }
    },
    {
      "type": "timeseries",
      "title": "Could-have-run ratio (%)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "(100 * (sum(rate(py_could_have_run_steps[$__rate_interval])) / sum(rate(py_active_steps[$__rate_interval])))) OR on() vector(0)"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2 } }
    },

    { "type": "row", "title": "Sessions", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 22 } },

    {
      "type": "timeseries",
      "title": "Steps par connexion — p50/p95/p99",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 23 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "refId": "A", "legendFormat": "p50", "expr": "histogram_quantile(0.50, sum by (le) (rate(py_model_connection_num_steps_bucket[$__rate_interval]))) OR on() vector(0)" },
        { "refId": "B", "legendFormat": "p95", "expr": "histogram_quantile(0.95, sum by (le) (rate(py_model_connection_num_steps_bucket[$__rate_interval]))) OR on() vector(0)" },
        { "refId": "C", "legendFormat": "p99", "expr": "histogram_quantile(0.99, sum by (le) (rate(py_model_connection_num_steps_bucket[$__rate_interval]))) OR on() vector(0)" }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },
    {
      "type": "bargauge",
      "title": "Distribution steps/connexion (dernière 1h)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 23 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "refId": "A", "expr": "sum by (le) (increase(py_model_connection_num_steps_bucket[1h])) OR on() vector(0)" }
      ],
      "fieldConfig": { "defaults": { "min": 0 } },
      "options": { "displayMode": "lcd", "orientation": "horizontal" }
    },

    { "type": "row", "title": "GPU (DCGM)", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 31 } },

    {
      "type": "timeseries",
      "title": "GPU Utilization (%) — GPU $gpu",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [ { "refId": "A", "expr": "avg by (gpu) (DCGM_FI_DEV_GPU_UTIL{gpu=~\"$gpu\"})" } ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 } }
    },
    {
      "type": "timeseries",
      "title": "VRAM utilisée (MiB) — GPU $gpu",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [ { "refId": "A", "expr": "avg by (gpu) (DCGM_FI_DEV_FB_USED{gpu=~\"$gpu\"})" } ],
      "fieldConfig": { "defaults": { "unit": "mibytes" } }
    },
    {
      "type": "timeseries",
      "title": "Power (W) — GPU $gpu",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [ { "refId": "A", "expr": "avg by (gpu) (DCGM_FI_DEV_POWER_USAGE{gpu=~\"$gpu\"})" } ],
      "fieldConfig": { "defaults": { "unit": "watt" } }
    },

    { "type": "row", "title": "Ressources conteneur TTS (cAdvisor)", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 40 } },

    {
      "type": "timeseries",
      "title": "CPU % (service tts)",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 41 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "refId": "A", "expr": "sum by (container_label_com_docker_compose_service) (rate(container_cpu_usage_seconds_total{container_label_com_docker_compose_service=\"tts\"}[$__rate_interval])) * 100 OR on() vector(0)" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0 } }
    },
    {
      "type": "timeseries",
      "title": "Mémoire (Working Set)",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 41 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "refId": "A", "expr": "sum by (container_label_com_docker_compose_service) (container_memory_working_set_bytes{container_label_com_docker_compose_service=\"tts\"}) OR on() vector(0)" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "type": "timeseries",
      "title": "Réseau Rx/Tx (B/s)",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 41 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "refId": "A", "expr": "sum by (container_label_com_docker_compose_service) (rate(container_network_receive_bytes_total{container_label_com_docker_compose_service=\"tts\"}[$__rate_interval])) OR on() vector(0)" },
        { "refId": "B", "expr": "sum by (container_label_com_docker_compose_service) (rate(container_network_transmit_bytes_total{container_label_com_docker_compose_service=\"tts\"}[$__rate_interval])) OR on() vector(0)" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" } }
    }
  ]
}

